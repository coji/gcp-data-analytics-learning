# Terraform 学習用サンプルファイル
# 実際に使用する際は、このファイルを main.tf にリネームして使用してください

provider "google" {
  project = "YOUR_PROJECT_ID"  # ← 自分のプロジェクトIDに変更
  region  = "asia-northeast1"
}

resource "google_bigquery_dataset" "learning" {
  dataset_id  = "terraform_learning_test"
  location    = "asia-northeast1"
  description = "Terraform学習用テストデータセット"

  labels = {
    environment = "learning"
    managed_by  = "terraform"
  }

  # 自動削除設定（オプション）
  # delete_contents_on_destroy = true
}

# アウトプット（作成したリソースの情報を表示）
output "dataset_id" {
  value       = google_bigquery_dataset.learning.dataset_id
  description = "作成したデータセットのID"
}

output "dataset_location" {
  value       = google_bigquery_dataset.learning.location
  description = "データセットのロケーション"
}
